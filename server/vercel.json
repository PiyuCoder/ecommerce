{
  "version": 2,
  "builds": [
    {
      "src": "server/server.mjs",
      "use": "@vercel/node",
      "config": { "dev": false }
    },
    {
      "src": "server/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/server.mjs" },
    { "src": "/(.*)", "dest": "server/build/$1" }
  ]
}

